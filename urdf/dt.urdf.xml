<robot name="dt">
 	<link name="world">
		<visual>
		    <origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.1 0.26 0.1"/>
			</geometry>
			<material name="Black">
	       		<color rgba="0 0 0 1.0"/>
	     	</material>
		</visual>	
	    <collision>
          <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
			    <box size="0.1 0.26 0.1"/>
		    </geometry>
            <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
        </collision>
	</link>

 	<link name="arm">
		<visual>
		    <origin xyz="1.29 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="2.58 0.26 0.8"/>
			</geometry>
			<material name="Red">
	       		<color rgba="1 0 0 1.0"/>
	     	</material>
		</visual>	
	    <collision>
          <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
				<box size="2.58 0.26 0.8"/>
			</geometry>
            <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
        </collision>
	</link>

	<link name="light">
		<visual>
		    <origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.8 0.8 0.8"/>
			</geometry>
			<material name="Yellow">
	       		<color rgba="1 0.8 0.1 1.0"/>
	     	</material>
		</visual>
		<collision>
          <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
				<box size="0.8 0.8 0.8"/>
			</geometry>
            <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
        </collision>
	</link>

    <joint name="tilt" type="revolute">
        <parent link="world"/>
        <child link="arm"/>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
        <limit upper="0" lower="-1.58" effort="10" velocity="10" />
    </joint>

	<joint name="light_joint" type="fixed">
    	<origin xyz="2.18 0.53 0" rpy="0 0 0"/>
    	<parent link="arm"/>
    	<child link="light"/>
	</joint>

</robot>